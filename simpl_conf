
server {
    listen 127.0.0.1:8080;
    server_name localhost;
    autoindex ON;

    error_page 404 /404.html;
    error_page 500 502 503 504 /50x.html;

    location / {
        autoindex ON;
        methods GET;

        root /Users/abayar/Desktop/;
        try_files $uri $uri/ /index.html;
        error_page 500 502 503 504 /50x.html;
        try_files $uri $uri/ /index.html;
        try_files $uri $uri/ /index.html;
    }
    location /maroc {
        index index.py index.php index.html;
        methods GET;
        autoindex ON;
        try_files $uri $uri/ /index.html;
        root /Users/abayar/Desktop/maroc/;
        error_page 500 502 503 504 /50x.html;
        try_files $uri $uri/ /index.html;
        try_files $uri $uri/ /index.html;
    }
    location /upload {
        autoindex ON;
        methods POST;
        upload ON;
        root /Users/abayar/Desktop/webserver/upload;
        try_files $uri $uri/ /index.html;
        error_page 500 502 503 504 /50x.html;
        try_files $uri $uri/ /index.html;
        try_files $uri $uri/ /index.html;
    }
    client_max_body_size 10m;
}

server {
