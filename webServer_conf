server
 {
    listen 80; # Choose the port
    server_name example.com; # Setup the server_names

    root /var/www/example.com; # Define the root directory for this server

    # Set up default error pages
    error_page 404 /404.html;
    error_page 500 502 503 504 /50x.html;

    # Limit client body size
    client_max_body_size 10m;

    location / {
        # The first server for a host:port will be the default for this host:port
        # This server will answer to all requests that donâ€™t belong to another server
        try_files $uri $uri/ /index.html;

        # Define a list of accepted HTTP methods for the route
        if ($request_method !~ ^(GET|POST|HEAD)$ ) {
            return 405;
        }

        # Define a HTTP redirection
        if ($http_user_agent ~* "msie") {
            return 301 https://$server_name$request_uri;
        }

        # Define a directory or a file from where the file should be searched
        # for example, if url /kapouet is rooted to /tmp/www,
        # url /kapouet/pouic/toto/pouet is /tmp/www/pouic/toto/pouet
        autoindex on;
        root /tmp/www;
    }

    location /uploads {
        # Make the route able to accept uploaded files and configure where they should be saved
        # Set the maximum size for uploaded files to 1 MB
        client_max_body_size 1m;
        # Save uploaded files to /var/www/example.com/uploads
        upload_pass /var/www/example.com/uploads/;
        upload_store /var/www/example.com/uploads/;
    }

    location /cgi-bin {
        # Execute CGI based on certain file extension (for example .php)
        # Make it work with POST and GET methods
        include /etc/nginx/fastcgi_params;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        fastcgi_pass unix:/var/run/php/php7.2-fpm.sock;
    }

    # Set a default file to answer if the request is a directory
    index index.html;

    # Define the default route
    location / {
        # Make it work with POST and GET methods
        try_files $uri $uri/ =404;
    }

    # Turn on or off directory listing
    autoindex on;

    # Setup the default file to answer if the request is a directory
    index index.html;

    # Set up default error pages
    error_page 404 /404.html;
    error_page 500 502 503 504 /50x.html;

    # Set the path for PATH_INFO for CGI scripts
    cgi_param PATH_INFO $fastcgi_path_info;

    # Make the server unchunk chunked requests
    chunked_transfer_encoding off;
}

